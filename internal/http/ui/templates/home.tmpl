{{define "home"}}
  {{template "layout" .}}
{{end}}

{{define "content"}}
<section class="mb-10 rounded-2xl bg-white p-8 shadow-xl shadow-slate-900/5 ring-1 ring-slate-200">
  <h1 class="text-2xl font-semibold text-slate-900">Bienvenue sur LMS Go</h1>
  <p class="mt-3 max-w-2xl text-base text-slate-600">
    Structurez vos contenus pédagogiques, suivez l’engagement de vos apprenants et automatisez vos parcours. Cette
    interface évoluera tout au long du développement du MVP.
  </p>
  <dl class="mt-6 grid gap-6 sm:grid-cols-3">
    {{range .Highlights}}
    <div class="rounded-xl bg-slate-50 p-5 ring-1 ring-slate-200">
      <dt class="text-sm uppercase tracking-wide text-slate-500">{{.Title}}</dt>
      <dd class="mt-2 text-2xl font-semibold text-slate-900">{{.Value}}</dd>
      <p class="mt-2 text-sm text-slate-600">{{.Description}}</p>
    </div>
    {{end}}
  </dl>
</section>
<section class="grid gap-6 md:grid-cols-2">
  {{range .Shortcuts}}
  <article class="flex flex-col justify-between rounded-2xl bg-white p-6 shadow-lg shadow-blue-100 ring-1 ring-blue-100 transition hover:shadow-xl hover:shadow-blue-200">
    <div>
      <h2 class="text-lg font-semibold text-slate-900">{{.Title}}</h2>
      <p class="mt-2 text-sm text-slate-600">{{.Description}}</p>
    </div>
    <span class="mt-6 inline-flex items-center gap-2 text-sm font-medium text-blue-600">
      {{.ActionLabel}}
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M5 12h14" />
        <path d="m12 5 7 7-7 7" />
      </svg>
    </span>
  </article>
  {{end}}
</section>
{{end}}
